<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>IMAGE ENCRYPTION TOOL</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css?family=Roboto:400,500&display=swap" rel="stylesheet">
  <style>
    
    body {
      background: #4dad85;
      font-family: 'Roboto', sans-serif;
      color: #fff;
      margin: 0;
      padding: 0;
      min-height: 100vh;
    }

    .page-header {
      text-align: center;
      margin: 40px 0 20px 0;
      color: #080808;
      font-size: 2rem;
      font-weight: 500;
    }

    .main-container {
      max-width: 600px;
      margin: 0 auto 40px auto;
      background: #000;
      border: 1px solid #333;
      border-radius: 8px;
      padding: 2rem;
      box-shadow: 0 0 10px rgba(0,0,0,0.6);
    }

    .form-control,
    .custom-select,
    .custom-file-input {
      background: #222 !important;
      color: #ffffff !important;
      border: 1px solid #333 !important;
    }
    .custom-file-label {
      background: #222;
      color: #bbb;
      border: 1px solid #333;
    }
    .custom-file-label::after {
      content: "Browse";
    }

    .preview-img {
      max-width: 100%;
      border: 2px dashed #444;
      margin-top: 20px;
      display: none;
      border-radius: 5px;
    }

    .btn-custom {
      background: #0d6efd;
      color: #fff;
      border: none;
      transition: background 0.3s ease;
    }
    .btn-custom:hover {
      background: #0b5ed7;
    }
    .btn-generate {
      background: #333;
      color: #fff;
      border: none;
      transition: background 0.3s ease;
    }
    .btn-generate:hover {
      background: #444;
    }
    .input-group-append .btn {
      border-top-left-radius: 0;
      border-bottom-left-radius: 0;
    }
  </style>
</head>
<body>

  <!-- Header Text Above Panel -->
  <div class="page-header">IMAGE ENCRYPTION TOOL</div>

  <!-- Main Dark Panel Container -->
  <div class="main-container">
    {% with messages = get_flashed_messages() %}
      {% if messages %}
        <div class="alert alert-danger" role="alert">
          {% for message in messages %}
            <p>{{ message }}</p>
          {% endfor %}
        </div>
      {% endif %}
    {% endwith %}

    <form method="post" enctype="multipart/form-data" id="encryptForm">
      <div class="form-group">
        <label for="image">Upload Image</label>
        <div class="custom-file">
          <input type="file" class="custom-file-input" id="image" name="image" required>
          <label class="custom-file-label" for="image">Choose file...</label>
        </div>
        <img id="preview" class="preview-img" alt="Image Preview">
      </div>

      <div class="form-group">
        <label for="mode">Mode</label>
        <select class="form-control" id="mode" name="mode">
          <option value="encrypt">Encrypt</option>
          <option value="decrypt">Decrypt</option>
        </select>
      </div>

      <div class="form-group">
        <label for="method">Method</label>
        <select class="form-control" id="method" name="method">
          <option value="xor">XOR Encryption</option>
          <option value="swap">Pixel Swap</option>
        </select>
      </div>

      <div class="form-group">
        <label for="key">Key / Seed (integer)</label>
        <div class="input-group">
          <input type="number" class="form-control" id="key" name="key" required>
          <div class="input-group-append">
            <button class="btn btn-generate" type="button" id="generateKey">Generate Random Key</button>
          </div>
        </div>
      </div>

      <button type="submit" class="btn btn-custom btn-block">Submit</button>
    </form>
  </div>

  <!-- jQuery and Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
  <script>
    
    $("#image").on("change", function() {
      var fileName = $(this).val().split("\\").pop();
      $(this).siblings(".custom-file-label").html(fileName);
      
      if (this.files && this.files[0]) {
        var reader = new FileReader();
        reader.onload = function(e) {
          $("#preview").attr("src", e.target.result);
          $("#preview").fadeIn();
        }
        reader.readAsDataURL(this.files[0]);
      }
    });

    document.getElementById('image').addEventListener('change', function(e) {
      var file = this.files[0];
      if (file) {
        var reader = new FileReader();
        reader.onload = function(e) {
          var preview = document.getElementById('preview');
          preview.src = e.target.result;
          preview.style.display = 'block';
        }
        reader.readAsDataURL(file);
      }
    });

    // Generate a random key.
    $("#generateKey").on("click", function() {
      var method = $("#method").val();
      var randomKey;
      if (method === "xor") {
        randomKey = Math.floor(Math.random() * 256);
      } else {
        randomKey = Math.floor(Math.random() * 10000);
      }
      $("#key").val(randomKey);
    });

    $("#method").on("change", function() {
      $("#key").val("");
    });
  </script>
</body>
</html>
